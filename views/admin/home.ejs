<%- include('../layout/admin/adminHeader') -%>
  <style>
    .card {
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .btn-group .btn.active {
      background-color: #0d6efd;
      color: white;
    }
  </style>
  <!-- partial:partials/_navbar.html -->
  <nav class="navbar default-layout-navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
    <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
      <a class="navbar-brand brand-logo" href="">AudioVerse</a>
      <a class="navbar-brand brand-logo-mini" href=""><img src="/assets/images/logo-mini.svg" alt="logo" /></a>
    </div>
    <div class="navbar-menu-wrapper d-flex align-items-stretch">
      <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
        <span class="mdi mdi-menu"></span>
      </button>
      <%- include('../layout/admin/adminNavbar') -%>
        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="btn-group" role="group" aria-label="Time Filters">
              <a href="/admin/home?filter=day" class="btn btn-outline-primary <% if (filter === 'day') { %>active<% } %>">Day</a>
              <a href="/admin/home?filter=week" class="btn btn-outline-primary <% if (filter === 'week') { %>active<% } %>">Week</a>
              <a href="/admin/home?filter=month" class="btn btn-outline-primary <% if (filter === 'month') { %>active<% } %>">Month</a>
              <a href="/admin/home?filter=year" class="btn btn-outline-primary <% if (filter === 'year') { %>active<% } %>">Year</a>
              <button type="button" class="btn btn-outline-danger ml-2" id="clearButton">Clear</button>
          </div>

            <div class="row">
              <div class="col-md-4 stretch-card grid-margin">
                <div class="card bg-gradient-danger card-img-holder text-white">
                  <div class="card-body">
                    <h4 class="font-weight-normal mb-3">Total Sales</h4>
                    <h2 class="mb-5">$<%= totalSales %>
                    </h2>
                  </div>
                </div>
              </div>
              <div class="col-md-4 stretch-card grid-margin">
                <div class="card bg-gradient-info card-img-holder text-white">
                  <div class="card-body">
                    <h4 class="font-weight-normal mb-3">Total Orders</h4>
                    <h2 class="mb-5">
                      <%= totalOrders %>
                    </h2>
                  </div>
                </div>
              </div>
              <div class="col-md-4 stretch-card grid-margin">
                <div class="card bg-gradient-success card-img-holder text-white">
                  <div class="card-body">
                    <h4 class="font-weight-normal mb-3">Total Users</h4>
                    <h2 class="mb-5">
                      <%= totalUsers %>
                    </h2>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-9 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <div class="clearfix">
                    <h4 class="card-title float-left">Order Delivery Count</h4>
                    <div id="visit-sale-chart-legend"
                      class="rounded-legend legend-horizontal legend-top-right float-right"></div>
                  </div>
                  <canvas id="visit-sale-chart" class="mt-4"></canvas>
                </div>
              </div>
            </div>
          </div>

          <div class="row">
            <!-- Top 10 Products Table -->
            <div class="col-12 grid-margin">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Top 10 Products</h4>
                  <div class="table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                          <th> Product Name </th>
                          <th> Bought Count </th>
                        </tr>
                      </thead>
                      <tbody>
                        <% topProducts.forEach(function(product) { %>
                          <tr>
                            <td><%= product.productName %></td>
                            <td><%= product.boughtCount %></td>
                          </tr>
                        <% }); %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          
            <!-- Top 10 Categories Table -->
            <div class="col-12 grid-margin">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Top 10 Categories</h4>
                  <div class="table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                          <th> Category Name </th>
                          <th> Bought Count </th>
                        </tr>
                      </thead>
                      <tbody>
                        <% topCategories.forEach(function(category) { %>
                          <tr>
                            <td><%= category.categoryName %></td>
                            <td><%= category.boughtCount %></td>
                          </tr>
                        <% }); %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          
            <!-- Top 10 Brands Table -->
            <div class="col-12 grid-margin">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Top 10 Brands</h4>
                  <div class="table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                          <th> Brand Name </th>
                          <th> Bought Count </th>
                        </tr>
                      </thead>
                      <tbody>
                        <% topBrands.forEach(function(brand) { %>
                          <tr>
                            <td><%= brand.brandName %></td>
                            <td><%= brand.boughtCount %></td>
                          </tr>
                        <% }); %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
        </div>
    </div>
    <%- include('../layout/admin/adminFooter') -%>

      <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

      <script>
        document.getElementById('clearButton').addEventListener('click', function () {
          window.location.href = '/admin/home';
        });
        const labels = JSON.parse('<%- labels %>');
const salesData = JSON.parse('<%- salesData %>');
const filterLabel = '<%= filterLabel %>';

// Initialize the chart
const ctx = document.getElementById('visit-sale-chart').getContext('2d');
const visitSaleChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: labels,
        datasets: [{
            label: 'Order Delivery Count',
            data: salesData,
            backgroundColor: 'rgba(75, 192, 192, 0.2)',
            borderColor: 'rgba(75, 192, 192, 1)',
            borderWidth: 1
        }]
    },
    options: {
        responsive: true,
        scales: {
            y: {
                beginAtZero: true,
                title: {
                    display: true,
                    text: 'Order Delivery Count'
                }
            },
            x: {
                title: {
                    display: true,
                    text: filterLabel
                }
            }
        }
    }
});


      </script>